<div class="text-center">
<h2>Welcome to the longest word game</h2>
<p>Here is your grid: </p>
<div class="grid">
<!-- GRID SIZE <%= @grid_size %> -->
<tr>
<% gridarray = @grid.chars %>
<% gridarray.each do | letter | %>
<td> <%= letter %></td>
<% end %>
</tr>
</div>
</div>

<!-- generate grid here -->
<div class="text-center">
<form action="/score" class="text-center  grid-margin">
  <input type="text" id="attempt" name="attempt" placeholder="your word here">
  <input type="hidden" id="grid" name="grid" value=<%= @grid %>>
 <!--  <input type="hidden" name="time_start" value= <%= @time_start %>> -->
  <input type="hidden" name="time_start" value= <%= Time.now.to_i %>>
  <input type="submit" value="Try it!">
</form>

<div class="link">
  <%= link_to "generate another grid", "" %>
</div>
<div class="link">
  <%= link_to "I want another number of letters", "/game"  %>
</div>




</div>
